<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_note"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="1">

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCategory"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextNote"
        android:gravity="top|left"
        android:background="#ffd6f2f5"
        android:layout_below="@+id/btnNoteSave"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="หมวดหมู่ : "
        android:gravity="left|center_vertical"
        android:textSize="16dp"
        android:id="@+id/textViewCategory"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/spinnerCategory"
        android:layout_toStartOf="@+id/spinnerCategory"
        android:layout_alignTop="@+id/spinnerCategory"
        android:textStyle="bold"
        android:layout_marginLeft="1dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTitle"
        android:hint="กรุณาใส่ชื่อเรื่อง"
        android:gravity="left|center_vertical"
        android:textSize="16dp"
        android:focusable="true"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6"
        android:textStyle="bold"
        android:layout_below="@+id/spinnerCategory"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewCategory"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ชื่อเรื่อง : "
        android:gravity="left|center_vertical"
        android:textSize="16dp"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editTextTitle"
        android:layout_alignTop="@+id/editTextTitle"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/editTextTitle"
        android:layout_marginLeft="1dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnNoteClear"
        android:background="@drawable/er"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/editTextNote"
        android:layout_alignEnd="@+id/editTextNote" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnNoteSave"
        android:background="@drawable/save"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/editTextTitle"
        android:layout_toStartOf="@+id/btnNoteClear"
        android:layout_marginTop="2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnShare"
        android:layout_below="@+id/editTextNote"
        android:layout_alignEnd="@+id/editTextNote"
        android:background="@drawable/facebookshare" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnEmo"
        android:background="@drawable/emo"
        android:layout_below="@+id/editTextNote"
        android:layout_toStartOf="@+id/btnShare"
        android:layout_marginRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnBackground"
        android:background="@drawable/bg_00001"
        android:layout_below="@+id/editTextNote"
        android:layout_toStartOf="@+id/btnEmo"
        android:layout_marginRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnFont"
        android:background="@drawable/font"
        android:layout_below="@+id/editTextNote"
        android:layout_toStartOf="@+id/btnBackground"
        android:layout_marginRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnImage"
        android:background="@drawable/iphoto"
        android:layout_below="@+id/editTextNote"
        android:layout_toStartOf="@+id/btnFont"
        android:layout_marginRight="10dp" />

</RelativeLayout>